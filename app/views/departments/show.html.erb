<div class="row">
  <h2 class="text-center"><%= @department.dept_name %> Department</h2>
  <% @dept_categories.each do |category| %>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center"><%= category.title %> <small>( <%= pluralize(category.staffs.count, "Staff") %> )</small></h3>
        </div>
        <div class="panel-body">
          <h5>Staffs listed under <%= category.title %>:</h5>
          <ul>
            <% category.staffs.each do |cat_staff| %>
              &mdash; <%= link_to full_name(cat_staff), staff_path(cat_staff) %>
              <hr>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>

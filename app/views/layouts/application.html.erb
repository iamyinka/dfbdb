<!DOCTYPE html>
<html>
  <head>
    <title>DFB Staff Management :: Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div id="logo">
      <div class="container">
        <%= link_to image_tag("https://www.damienfoundationnigeria.org/wp-content/uploads/2017/11/damian-logo.png"), root_path %>
      </div>
    </div>

    <div class="example5">
      <nav class="navbar navbar-inverse">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar5">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "DFB Staffs Management", root_path, class: "navbar-brand" %>
          </div>
          <div id="navbar5" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="active"><%= link_to "Staffs", root_path %></li>
                <li><a href="#">Departments</a></li>
                <li><a href="#">Donors</a></li>
                <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
          <!--/.nav-collapse -->
        </div>
        <!--/.container-fluid -->
      </nav>

    </div>

    <div class="container">
      <%= yield %>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= custom_bootstrap_flash %>
  </body>
</html>
